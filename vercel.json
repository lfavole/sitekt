{
    "buildCommand": "bash build.sh",
    "crons": [
        {
          "path": "/api/backup",
          "schedule": "0 1 * * *"
        }
    ],
    "outputDirectory": "static",
    "rewrites": [
        {
            "source": "/static/(.*)",
            "destination": "/$1"
        },
        {
            "source": "/(.*)",
            "destination": "api/app.py"
        }
    ],
    "images": {
        "sizes": [80, 100, 256, 1080, 1600],
        "localPatterns": [{
            "pathname": "^/static/.*$",
            "search": ""
        }],
        "remotePatterns": [{
            "protocol": "https",
            "hostname": "*.public.blob.vercel-storage.com",
            "port": "",
            "search": ""
        }],
        "formats": ["image/avif", "image/webp"]
    }
}
